<div class="form-group row">
    <label class="col-lg-3 col-form-label form-control-label">
        ตัวเลือกคอร์สเรียน
    </label>
    <div class="col-lg-9">
        @if (courses == null)
        {
            <text>Loading...</text>
        }
        else if (courses.Count == 0)
        {
            <text>ไม่พบข้อมูลคอร์สเรียน</text>
        }
        else
        {
            @foreach (TakraonlineCRM.Shared.Setting.Course.Course course in courses)
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="@course.Id"
                           value="@course.Id" @onchange="OnChangeAsync">
                    <label class="form-check-label" for="@course.Id"> @course.CourseName </label>
                </div>
            }
        }
    </div>
</div>
@if (!String.IsNullOrWhiteSpace( coursedetail ))
{
    <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label">
            รายละเอียดคอร์ส
        </label>
        <div class="col-lg-9">
            <label>@coursedetail</label>
        </div>
    </div>
}
<br />

@if (!String.IsNullOrWhiteSpace( OrderCourse.CourseName ))
{
    <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label">
            ชื่อคอร์สที่บันทึก
        </label>
        <div class="col-lg-9">
            <label>@OrderCourse.CourseName</label>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label">
            วันและเวลาเรียน
        </label>
        <div class="col-lg-9">
            <input type="datetime-local" @bind-value="@OrderCourse.BookingDate" class="form-control w-auto" />
        </div>
    </div>
    <br />
}