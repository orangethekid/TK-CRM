<EditForm Model="graphic" OnValidSubmit="OnValidSubmit">
    <form role="form">
        <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label">
                แบบร่าง
            </label>
            <div class="col-lg-9">
                <Upload OnChange="AssignImageUrl" ImgUrl="@graphic.DraftFile" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label">
                คอมเม้นต์ ตอบกลับจากลูกค้า
            </label>
            <textarea @bind="@graphic.FeedBack" class="form-control w-50" rows="4" />
        </div>
    </form>
    <br />
    <div class="d-block text-center">
        <button type="submit" class="btn btn-success">
            @ButtonText
        </button>
    </div>
</EditForm>